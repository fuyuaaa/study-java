<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- provider's application desc, used for tracing dependency relationship -->
    <dubbo:application name="demo-provider" />

    <!-- use multicast registry center to export services -->
    <dubbo:registry id="registry" address="zookeeper://localhost:2181"/>

    <!-- use dubbo protocol to export services on port 20880 -->
    <dubbo:protocol name="dubbo" port="-1" transporter="netty"/>

    <!-- services implementation, as same as regular local bean -->
    <bean id="testService" class="top.fuyuaaa.provider.TestServiceImpl"/>

    <!-- declare top.fuyuaaa.study.netty.the services interface to be exported -->
    <dubbo:service version="1.0" interface="top.fuyuaaa.api.TestService" ref="testService"/>
</beans>